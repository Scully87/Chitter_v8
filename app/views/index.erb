 <!DOCTYPE HTML>
 <html>
 
<body>




<section class="sign_in">
<h1>Sign back in to Gritter</h1>
<form method="post" action="/sessions">
    <input type="text" name="user_name" placeholder="Username" id="post_submits"/>
    <br><input name="password" class="input_text" type="password" placeholder="Password"id="post_submits" />
    <br><input type="submit" value="Sign In!" id="greet_button">
</form>
</section>

<section class="sign_up">
<h1>Sign up to join Gritter</h1>
	
	<form action="/users" method="post">
		<input name="user_name" type="text" placeholder="Create Username" id="post_submits"><br>
		<input name="name" type="text" placeholder="Your name" id="post_submits"><br>
		<input name="email" type="text" placeholder="E-mail Address" id="post_submits"><br>
		<input name="password" class="input_text" type="password" placeholder="Password" id="post_submits"><br>
		<input name="password_confirmation" class="input_text" type="password" placeholder="Re-type Password" id="post_submits"/><br>
		<input type="submit" value="Join Gritter!" id="greet_button">
	</form>
</section>

<section id="wrapper">
<section id="holder">
<section id="peeps-wrapper">
 <aside>
 		<h2 class="peeps-holder">Peeps</h2>
    <p class="peeps-holder"></p>

	<section id="peeps">
	<% @greets.reverse.each do |greet| %>
	  <p class="user_greet"><%=h greet.user_name %></p>
	  <p class="body_greet"><%=h greet.body %></p>
	  <p class="time_greet">Greeted at <%= greet.created_at.to_s.chars[0..15].each_slice(10).to_a.rotate.flatten.drop(1).insert(5, " ").join %></p>
	 <% end %>
	</section>

	</aside> 
</section>
</section>	
</section>






</body>
</html>
